<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="cukeulator.cucumber.androidmicrobutton.MainActivity">


	<FrameLayout
		android:id="@+id/btn_micro"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:visibility="gone"
		tools:visibility="gone">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:background="@drawable/ic_micro"
			android:backgroundTint="@android:color/holo_green_dark" />
	</FrameLayout>


	<!--En mettant ces padding sur l'image on a une image de 100dp*100dp-->
	<FrameLayout
		android:id="@+id/btn_micro_starting"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:visibility="gone"
		tools:visibility="visible">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:background="@drawable/ic_micro"
			android:backgroundTint="@android:color/darker_gray" />

		<ProgressBar
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:indeterminate="true"
			android:indeterminateDrawable="@drawable/progress_color" />
	</FrameLayout>


	<!--En mettant ces padding sur l'image on a une image de 100dp*100dp-->
	<FrameLayout
		android:id="@+id/btn_micro_recording"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:visibility="gone"
		tools:visibility="gone">

		<FrameLayout
			android:id="@+id/circle_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
			android:id="@+id/gray_filled_circle_1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:background="@drawable/gray_filled_circle_1"
			android:backgroundTint="@android:color/darker_gray"
			android:visibility="gone"/>

			<ImageView
				android:id="@+id/gray_filled_circle_2"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_2"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>
			<ImageButton
				android:id="@+id/gray_filled_circle_3"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_3"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="visible"/>

			<ImageView
				android:id="@+id/gray_filled_circle_4"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_4"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>
			<ImageView
				android:id="@+id/gray_filled_circle_5"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_5"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>

			<ImageView
				android:id="@+id/gray_filled_circle_6"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_6"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>
			<ImageView
				android:id="@+id/gray_filled_circle_7"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_7"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>

			<ImageView
				android:id="@+id/gray_filled_circle_8"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_8"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>
			<ImageView
				android:id="@+id/gray_filled_circle_9"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_9"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>

			<ImageView
				android:id="@+id/gray_filled_circle_10"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center"
				android:background="@drawable/gray_filled_circle_10"
				android:backgroundTint="@android:color/darker_gray"
				android:visibility="gone"/>
		</FrameLayout>

		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:background="@drawable/ic_micro"
			android:backgroundTint="@android:color/holo_red_light" />
	</FrameLayout>


</FrameLayout>
